<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".AdminDashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_dashboard"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/gradient_mid"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/createQRTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_qr_code"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/gradient_start"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/eventNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_name"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/createQRTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/eventNameInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/eventNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eventNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="z.B. Welcome Event"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/eventDescLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_description"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/eventNameInputLayout"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/eventDescInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/eventDescLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eventDescInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="z.B. Erstsemester BegrÃ¼ÃŸung"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/generateButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/generate_qr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/gradient_start"
            app:cornerRadius="32dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            android:elevation="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/eventDescInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/qrCodeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/generateButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/qrCodeImage"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:contentDescription="QR Code"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qr_code_instruction"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- User Stamp Counts Section -->
        <TextView
            android:id="@+id/userStatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_statistics"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/gradient_start"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/qrCodeCard"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/realtimeIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”´ Live"
            android:textSize="14sp"
            android:textColor="@color/gradient_mid"
            android:layout_marginTop="32dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/qrCodeCard"
            app:layout_constraintStart_toEndOf="@id/userStatsTitle"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/userStatsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/userStatsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/totalUsersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Users: 0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gradient_mid"
                    android:layout_marginBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/userStampsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="400dp"
                    android:scrollbars="vertical"/>

                <TextView
                    android:id="@+id/noUsersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_users_yet"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="32dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/currentTokenLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_token"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/userStatsCard"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/currentTokenValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="admin123"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gradient_mid"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/currentTokenLabel"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/gradient_mid"
            app:cornerRadius="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/currentTokenValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
